@*
    This page is the landing page for all visitors.
*@

@{ Layout = "SiteLayout"; }

@section Styles {
    <link rel="stylesheet" href="~/styles/landing.css" />
}

<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-4 font-weight-normal">We Do Western</h1>
        <p class="lead font-weight-normal">All sorts of apparel to suit your needs.</p>
        @*<a class="btn btn-outline-secondary" href="#">Coming soon</a>*@
    </div>
</div>

<div class="d-md-flex flex-md-equal w-100 my-md-3 pl-md-3">
    <a class="d-block bg-dark mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden text-white text-decoration-none"
       asp-controller="Catalog" asp-action="BrowseView" asp-route-Category="apparel/hats">
        <div class="my-3 py-3">
            <h2 class="display-5">Hats</h2>
            <p class="lead">They go on your head.</p>
        </div>
        <p style="font-size: 12rem">🤠</p>
    </a>
    <a class="d-block bg-light mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden text-dark text-decoration-none"
       asp-controller="Catalog" asp-action="BrowseView" asp-route-Category="apparel/boots">
        <div class="my-3 p-3">
            <h2 class="display-5">Boots</h2>
            <p class="lead">For all of your feet.</p>
        </div>
        <p style="font-size: 12rem">👢</p>
    </a>
</div>

<div class="d-md-flex flex-md-equal w-100 my-md-3 pl-md-3">
    <a class="d-block bg-light mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden text-dark text-decoration-none"
       asp-controller="Catalog" asp-action="BrowseView" asp-route-Category="apparel/bottoms">
        <div class="my-3 p-3">
            <h2 class="display-5">Jeans</h2>
            <p class="lead">Just jeans.</p>
        </div>
        <p style="font-size: 12rem">👖</p>
    </a>
    <a class="d-block bg-primary mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden text-white text-decoration-none"
       asp-controller="Catalog" asp-action="BrowseView" asp-route-Category="apparel/eyewear">
        <div class="my-3 py-3">
            <h2 class="display-5">Shades</h2>
            <p class="lead">Imagine these are somehow western 🤷‍</p>
        </div>
        <p style="font-size: 12rem">😎</p>
    </a>
</div>

<div class="bg-dark">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 col-md-7 py-5">
                <h4 class="text-white">About</h4>
                <p class="text-muted text-white">This is a portfolio demo site. This is not a real company, and purchasing items will do absolutely nothing. Social media links here are also just for show. </p>
            </div>
            <div class="col-sm-4 offset-md-1 py-5">
                <h4 class="text-white">Contact</h4>
                <ul class="list-unstyled">
                    <li><a href="#" class="text-white">Follow on Twitter</a></li>
                    <li><a href="#" class="text-white">Like on Facebook</a></li>
                    <li><a href="#" class="text-white">Email me</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>