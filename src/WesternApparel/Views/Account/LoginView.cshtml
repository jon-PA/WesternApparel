@model WesternApparel.Core.Account.LoginViewModel

<div id="page" style="grid-template-rows: 100fr">
    <form class="form-signin needs-validation" novalidate asp-controller="Account" asp-action="Login">
        <input type="hidden" asp-for="ReturnUrl" />
        <h1 class="h3 font-weight-normal mb-4">Welcome</h1>
        <div class="vertical-input-group">
            <label for="inputEmail" class="sr-only" asp-for="EmailAddress">Email address</label>
            <input type="email" id="inputEmail" class="form-control" placeholder="Email address" autofocus="" asp-for="EmailAddress">
            <label for="inputPassword" class="sr-only" asp-for="Password">Password</label>
            <input type="password" id="inputPassword" class="form-control" placeholder="Password" asp-for="Password">
        </div>
        <div class="custom-control custom-checkbox mt-4 mb-4">
            <input type="checkbox" class="custom-control-input" asp-for="RetainLogin">
            <label class="custom-control-label user-select-none has-tooltip" title="Stay logged after you close this window" asp-for="RetainLogin">Remember me</label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        <p class="mt-3">No Account? <a asp-controller="Account" asp-action="RegisterView">Register</a></p>
        <p class="mt-3 mb-3 text-muted">Western Apparel © 2020</p>
    </form>
</div>


<div style="position: absolute; bottom: 0; width: 100%">
    <partial name="SiteFooter" />
</div>

@section Styles {
    <link rel="stylesheet" href="~/styles/login.css" />
}

@section Scripts {
    <script>
        $(function () {
            $('.input-validation-error').each(function () {
                let opt = {
                    title: $(this).attr('data-val-required'),
                    placement: 'right'
                };
                $(this).tooltip( opt ).tooltip( 'show' );
            });
        });
    </script>
}
